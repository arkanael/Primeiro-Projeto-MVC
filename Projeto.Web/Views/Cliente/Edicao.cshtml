<!-- Classe de modelo desta página -->
@model Projeto.Web.Models.ClienteViewModelEdicao

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Atualizar dados do Cliente</h4>
<a href="/Cliente/Consulta">Voltar</a> para a consulta.
<hr/>

<!-- Formulário para editar os dados do cliente -->
@using (Html.BeginForm())
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    @Html.LabelFor(model => model.IdCliente) <br/>
    @Html.TextBoxFor(model => model.IdCliente, 
                new { @readonly = "readonly" })
    <br /><br />

    @Html.LabelFor(model => model.Nome) <br />
    @Html.TextBoxFor(model => model.Nome)
    <br /><br />

    @Html.LabelFor(model => model.Email) <br />
    @Html.TextBoxFor(model => model.Email)
    <br /><br />

    @Html.LabelFor(model => model.DataCadastro) <br />
    @Html.TextBoxFor(model => model.DataCadastro,
                new { @readonly = "readonly" })
    <br /><br />
    
    <input type="submit" value="Atualizar Dados"
           class="btn btn-primary"/>
    <br /><br />

    @ViewBag.Mensagem
}

